@page
@using StoreManagement.Entities;
@using StoreManagement.Logic;
@using StoreManagement.Data;
@using System.Web;
@model StoreManagement.Pages.Delete_InvoiceModel

@{
    string userGlobal = Request.Query["User"];
    ViewData["User"] = userGlobal;

    bool validUser = User_Logic.FindUserByUserName(userGlobal);
}

@if (!validUser)
{
    string errorMessage = "noUser";
    Response.Redirect("/Error?error=" + errorMessage);
}

@{
    int invoiceId = int.Parse(Request.Query["invoiceId"]);
    Invoice Invoice = Invoice_Logic.FindInvoiceById(invoiceId);
    Product[] listProducts = Product_Data.ReadListProduct();
    string confirmDelete;
    bool deleted = false;
    bool validIdResult = true;
    string messageValid = "";


    if (string.IsNullOrEmpty(Invoice.Id.ToString()))
    {
        messageValid = $"Mã sản phẩm không tồn tại";
        validIdResult = false;
    }
    else
    {
        if (Request.Method == "POST")
        {
            confirmDelete = Request.Form["delete"];
            if (confirmDelete == "Đúng")
            {
                deleted = Invoice_Logic.DeleteInvoiceById(invoiceId);
                deleted = Invoice_Logic.DeleteItemsByInvoiceId(Invoice.Items);
            }
        }
    }

}

@{
    ViewData["TitleParent"] = "Hóa đơn nhập hàng";
    ViewData["BreadcrumbsParent"] = "List_InputsInvoice?User=" + userGlobal;
    ViewData["TitleCurrent"] = "Xóa hóa đơn nhập hàng";
    ViewData["BreadcrumbsCurrent"] = "Delete_Invoice?invoiceId=" + Invoice.Id + "&User=" + userGlobal;
}

<div class="content">
    <div class="top">
        <div class="title">XÓA HÓA ĐƠN NHẬP HÀNG</div>
    </div>

    @if (!validIdResult)
    {
        <div class="valid_notification">
            <div class="valid_notification_note">
                <i class='bx bx-info-circle'></i><p class="valid">@messageValid</p>
            </div>
        </div>
    }
    else
    {
        @if (!deleted)
        {
            <div class="delete_notification">
                <div class="delete_notification_note">
                    <i class='bx bx-info-circle'></i><p>Bạn chắn chắn muốn xóa hóa đơn này?</p>
                </div>
                <div class="confirm_delete">
                    <form method="POST">
                        <input type="submit" id="delete" name="delete" value="Đúng"><br>
                    </form>
                    <a href="/List_InputsInvoice?User=@userGlobal">Không</a>
                </div>
            </div>
        }
        else
        {
            <div class="delete_success_notification">
                <div class="delete_success_notification_note">
                    <i class='bx bx-info-circle'></i><p>Đã xóa hóa đơn nhập hàng thành công</p>
                </div>
                <a href="/List_InputsInvoice?User=@userGlobal">OK</a>
            </div>
        }
    }

</div>
